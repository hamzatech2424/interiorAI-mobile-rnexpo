{
  "name": "backend",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist && echo 'Done.'",
    "dev": "bun --hot server.ts",
    "start": "bun server.ts",
    "db:generate": "bun drizzle-kit generate",
    "db:migrate": "bun drizzle-kit migrate",
    "db:push": "bun drizzle-kit push --verbose",
    "db:push:force": "bun drizzle-kit push --force",
    "db:studio": "bun drizzle-kit studio",
    "db:reset": "bun drizzle-kit drop && bun drizzle-kit push",
    "build:types": "tsc -p tsconfig.types.json"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@better-auth/expo": "^1.3.14",
    "@hono/trpc-server": "^0.4.0",
    "@neondatabase/serverless": "^1.0.1",
    "better-auth": "^1.3.14",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.8",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "zod": "^4.1.11"
  }
}
